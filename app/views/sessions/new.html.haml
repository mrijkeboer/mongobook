= form_for(:session, :url => sessions_url) do |f|
  %div
    = f.label :username, "Username"
    - if params[:session]
      = f.text_field :username, :value => params[:session][:username]
    - else
      = f.text_field :username
  %div
    = f.label :password, "Password"
    = f.password_field :password
  %div
    = f.submit "Sign in"
