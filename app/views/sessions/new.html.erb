<%= form_for(:session, :url => sessions_url) do |f| %>
	<div>
		<label for="username">Username</label>
		<% if params[:session] %>
			<%= f.text_field :username, :value => params[:session][:username] %>
		<% else %>
			<%= f.text_field :username %>
		<% end %>
	</div>

	<div>
		<label for="password">Password</label>
		<%= f.password_field :password %>
	</div>

	<div>
		<%= f.submit "Sign in" %>
	</div>
<% end %>
