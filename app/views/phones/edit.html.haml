%h1 Edit phone
= form_for(:phone, :url => contact_phone_url(@contact.id, @phone), :html => {:method => :put }) do |f|
  %table.edit
    %tr
      %th= f.label :number, "Number:"
      %td= f.text_field :number
      %td.error= @phone.errors[:number].first
    %tr
      %th= f.label :type, "Type:"
      %td= f.select :type, Phone::TYPES
      %td.error= @phone.errors[:type].first
    %tr
      %th &nbsp;
      %td= f.submit "Save", :class => "button"
