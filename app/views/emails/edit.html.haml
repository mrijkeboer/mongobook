%h1 Edit email
= form_for(:email, :url => contact_email_url(@contact.id, @email), :html => {:method => :put }) do |form|
  %table.edit
    %tr
      %th
        %label{:for => "email_address"} Address:
      %td= form.text_field :address
      %td= @email.errors[:address].first
    %tr
      %th &nbsp;
      %td= submit_tag "Save", :class => "button"
