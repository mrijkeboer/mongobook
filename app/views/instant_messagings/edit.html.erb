<h1>Edit instant messaging</h1>                                          

<%= form_for(:instant_messaging, :url => contact_instant_messaging_url(@contact.id, @instant_messaging), :html => {:method => :put }) do |form| %>

	<table class="edit">
		<tr>
			<th><label for="instant_messaging_account">Account:</label></th>
			<td><%= form.text_field :account %></td>
			<td><%= @instant_messaging.errors[:account].first %></td>
		</tr>                                   

		<tr>
			<th><label for="instant_messaging_type">Type:</label></th>
			<td><%= form.select :type, InstantMessaging::TYPES %></td>
			<td><%= @instant_messaging.errors[:type].first %></td>
		</tr>                                   

		<tr>
			<th>&nbsp;</th>
			<td><%= submit_tag "Save", :class => "button" %></td>
		</tr>
	</table>
<% end %>

