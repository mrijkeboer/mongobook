<h1>Edit person</h1>                                          

<% form_for(:person, :url => person_url(@person), :html => {:method => :put }) do |form| %>

	<table>
		<tr>
			<th><label for="person_name"><b>Name:</b></label></th>
			<td><%= form.text_field :name %></td>
			<td><%= error_message_on :person, :name %></td>
		</tr>                                   

		<tr>
			<th><label for="person_sortkey"><b>Sort key:</b></label></th>
			<td><%= form.text_field :sort_key %></td>
			<td><%= error_message_on :person, :sort_key %></td>
		</tr>                                   

		<tr>
			<th>&nbsp;</th>
			<td><%= submit_tag "Save", :class => "button" %></td>
		</tr>
	</table>
<% end %>

