<h1>Edit contact</h1>                                          

<% form_for(:contact, :url => contact_url(@contact), :html => {:method => :put }) do |form| %>

	<table>
		<tr>
			<th><label for="contact_name"><b>Name:</b></label></th>
			<td><%= form.text_field :name %></td>
			<td><%= error_message_on :contact, :name %></td>
		</tr>                                   

		<tr>
			<th><label for="contact_sortkey"><b>Sort key:</b></label></th>
			<td><%= form.text_field :sort_key %></td>
			<td><%= error_message_on :contact, :sort_key %></td>
		</tr>                                   

		<tr>
			<th>&nbsp;</th>
			<td><%= submit_tag "Save", :class => "button" %></td>
		</tr>
	</table>
<% end %>

