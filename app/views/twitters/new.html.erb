<h1>Add twitter</h1>                                          

<%= form_for(:twitter, :url => contact_twitters_url(@contact.id)) do |form| %>

	<table class="edit">
		<tr>
			<th><label for="twitter_username">Username:</label></th>
			<td><%= form.text_field :username %></td>
			<td><%= @twitter.errors[:username].first %></td>
		</tr>                                   

		<tr>
			<th>&nbsp;</th>
			<td><%= submit_tag "Add", :class => "button" %></td>
		</tr>
	</table>
<% end %>
